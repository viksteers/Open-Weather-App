<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpenWeather.WeatherPage">

        <StackLayout>
        <Label x:Name="LblCityName"
               TextColor="Teal"
               Text="Results..."
               FontSize="30"
               VerticalOptions="End"
               HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="LblTemp"
               TextColor="DarkGreen"
               Text="Results..."
               FontSize="20"
               VerticalOptions="Start"
               HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="LblLowTemp"
               TextColor="DarkBlue"
               Text="Results..."
               FontSize="15"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
        <Label x:Name="LblHighTemp"
               TextColor="DarkRed"
               Text="Results..."
               FontSize="15"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>